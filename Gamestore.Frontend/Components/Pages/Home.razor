@page "/"
<!-- we can also import @using Models  -->
@using Gamestore.Frontend.Models
<PageTitle>Game Catalog</PageTitle>


<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Game Name</th>
            <th>Genre</th>
            <th>Release Date</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var game in games)
        {
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
                <td>@game.Genre</td>
                <td>@game.ReleaseDate.ToShortDateString()</td>
                <td>@game.Price</td>
                
    
</table>

